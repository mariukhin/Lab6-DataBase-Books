<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="items.Edition" table="Edition">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id"/>
        <property name="bookId" column="bookId" type="int"/>
        <property name="costId" column="costId" type="int"/>
        <property name="editionname" column="editionname" type="string"/>
        <property name="numOfCopies" column="numOfCopies" type="int"/>
    </class>
</hibernate-mapping>