<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="items.Book" table="Book">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id"/>
        <property name="authorId" column="authorId" type="int"/>
        <property name="name" column="bookname" type="string"/>
        <property name="dateR" column="dateofpublication" type="int"/>
    </class>
</hibernate-mapping>