<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name ="items.Author" table="Author">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id"/>
        <property name="name" column="authorname" type="string"/>
        <property name="numofBooks" column="numofBooks" type="int"/>
        <property name="series" column="series" type="int"/>
    </class>
</hibernate-mapping>