<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="items.ScreenAdaptation" table="ScreenAdaptation">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id"/>
        <property name="name" column="screenadaptationname" type="string"/>
        <property name="year" column="year" type="int"/>
        <property name="mark" column="mark" type="int"/>
        <property name="bookId" column="bookId" type="int"/>
    </class>
</hibernate-mapping>